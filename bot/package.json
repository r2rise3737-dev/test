{
  "name": "stars-bot",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "ts-node --esm index.ts",
    "build": "tsc -p .",
    "start": "node --enable-source-maps dist/index.js",
